number_of_elements = int(input("How many elements will be entered"))
elements = []

for i in range (number_of_elements):
    integer = int(input("Please input integer element" + str(i) + ":"))
    elements.append(integer)

print("Here are all the elements")
for integer in elements:
    print(integer)

print("The sum of all elements in the list are", sum(integer))
